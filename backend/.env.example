# KodnestBank Backend - Environment Variables
# Copy this file to .env and fill in your values

# Server
PORT=5000

# MongoDB Connection (use your MongoDB Atlas URI or local MongoDB)
MONGODB_URI=mongodb://localhost:27017/kodnestbank

# JWT Secret - Use a strong random string in production
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production

# JWT Token Expiry (e.g., 7d for 7 days)
JWT_EXPIRE=7d

# Email (for transaction notifications - Gmail)
EMAIL=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
# Note: For Gmail, use App Password (not regular password)
